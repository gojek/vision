 <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-heading">Incident report</h1>
                        
                    </div>
                    <br>
                    
                </div>
                <% if flash[:notice] != nil %>
                      <div class='alert alert-success' ><%= flash[:notice] %> </div>
                    <% end %>
                <div class="row">
                    <div class="col-lg-8">
                      <div class="panel panel-primary">
                        <div class="panel-heading">Issue and Recovery Report Summary</div>
                        <div class="panel-body">
                      <p>
                        <strong>Report ID:</strong>
                        <%= @incident_report.id %>
                      </p>
                      <p>
                        <strong>Last Update:</strong>
                        <%= @incident_report.updated_at.to_s(:long) %>
                      </p>

                      <p>
                        <strong>Service impact:</strong>
                        <%= @incident_report.service_impact %>
                      </p>

                      <p>
                        <strong>Problem details:</strong>
                        <%= @incident_report.problem_details %>
                      </p>

                      <p>
                        <strong>How detected:</strong>
                        <%= @incident_report.how_detected %>
                      </p>

                      <p>
                        <strong>Occurrence time:</strong>
                        <%= @incident_report.occurrence_time.to_s(:db) %>
                      </p>

                      <p>
                        <strong>Detection time:</strong>
                        <%= @incident_report.detection_time.to_s(:db) %>
                      </p>
                    
                     
                      <p>
                        <strong>Recovery time:</strong>
                        <%= @incident_report.recovery_time.to_s(:db) %>
                      </p>

                      <p>
                        <strong>Source:</strong>
                        <%= @incident_report.source %>
                      </p>
                      </div>
                      <div class="panel-heading">Influence</div>
                      <div class="panel-body">
                      <p>
                        <strong>Rank:</strong>
                        <%= @incident_report.rank %>
                      </p>
                      <p>
                        <strong>Loss related:</strong>
                        <%= @incident_report.loss_related %>
                      </p>
                    </div>
                    <div class="panel-heading">Cause of Issue</div>
                        <div class="panel-body">
                      <p>
                        <strong>Occurred reason:</strong>
                        <%= @incident_report.occurred_reason %>
                      </p>

                      <p>
                        <strong>Overlooked reason:</strong>
                        <%= @incident_report.overlooked_reason %>
                      </p>
                    </div>
                     <div class="panel-heading">Recovery Measure</div>
                        <div class="panel-body">
                      <p>
                        <strong>Recovery action:</strong>
                        <%= @incident_report.recovery_action %>
                      </p>

                      <p>
                        <strong>Prevent action:</strong>
                        <%= @incident_report.prevent_action %>
                      </p>

                      <p>
                        <strong>Recurrence concern:</strong>
                        <%= @incident_report.recurrence_concern %>
                      </p>

                      <p>
                        <strong>Current status:</strong>
                        <%= @incident_report.current_status %>
                      </p>

                      <p>
                        <strong>Measurer status:</strong>
                        <%= @incident_report.measurer_status %>
                      </p>
                    </div>
                     <div class="panel-heading">Reported</div>
                        <div class="panel-body">
                      <p>
                        <strong>User:</strong>
                        <%= @incident_report.user.email %>
                      </p>
                    </div>
                    </div>
                          <%= link_to 'Back', :back %> 
                          <% if current_user == @incident_report.user || current_user.role == 'admin' %>|
                          <%= link_to 'Edit', edit_incident_report_path(@incident_report) %> 
                          <% end %>
                      </div>
                    <!-- /.col-lg-12 -->
                     <div class="col-lg-4">
            <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-clock-o fa-fw"></i> Timeline
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <%= render 'timeline', document: @incident_report %>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
                
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
