<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Change request</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @access_request_comments.each do |access_request_comment| %>
      <tr>
        <td><%= access_request_comment.body %></td>
        <td><%= access_request_comment.access_request %></td>
        <td><%= access_request_comment.user %></td>
        <td><%= link_to 'Show', access_request_comment %></td>
        <td><%= link_to 'Edit', edit_access_request_comment_path(access_request_comment) %></td>
        <td><%= link_to 'Destroy', access_request_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

