
 <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>

                    <div class="panel-body">
                    <% if flash[:alert] != nil%>
                    <div class="alert alert-danger" >
                    <%= flash[:alert] %>
                    </div>
                    <% end %>
                       	<%= link_to user_omniauth_authorize_path('google_oauth2'), class:'btn btn-block btn-social btn-google-plus' do %>
                                <i class="fa fa-google-plus"></i> Sign in with Google <% end %>

                        
                    </div>
                </div>
            </div>
        </div>
    </div>




