<!-- header menu -->
<header class="main-header">
  <!-- Logo -->
  <a data-no-turbolink='true' href="<%= root_path %>" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>V</b></span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>V</b>ision</span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li>
        <%= link_to notifications_index_path(type: 'cr'), id: 'notif-cr-button' do%>
          Change Request Notifications
          <% if current_user.notifications.cr.count > 0 %>
            <span id="notif-cr" class="label label-success"><%= current_user.notifications.cr.count%></span>
          <% end %>
        <% end %>
        </li>
        <li>
        <%= link_to notifications_index_path(type: 'ir'), id: 'notif-ir-button' do%>
          Incident Report Notifications
          <% if current_user.notifications.ir.count > 0 %>
            <span id="notif-ir" class="label label-success"><%= current_user.notifications.ir.count%></span>
          <% end %>
        <% end %>
        </li>
        <!-- <%= render 'pages/notification' %>
        <%= render 'pages/ir_notification' %> -->
        <% if current_user.have_notifications? %>
        <li>
          <%= link_to notifications_clear_notifications_path, data: {confirm: "Are you sure you want to clear all notifications?"} do%>
            <i class= "glyphicon glyphicon-remove"> <span style='display: none'> Clear Notification </span> </i>
          <% end %>
        </li>
        <% end %>
        <li class='dropdown user user-menu'>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class='hidden-xs'><%= current_user.name %></span>
          </a>
          <ul class='dropdown-menu'>
            <li class="user-header">
              <p>
                <%= current_user.name %>
                <small><%= current_user.role %>
                  <% if current_user.is_admin %>
                  -admin
                  <%end %>


                </small>
              </p>
            </li>
            <li class='user-footer'>
              <div class="pull-right">
                <%= link_to destroy_user_session_path, :method => :delete, class: "btn btn-default btn-flat" do  %>
                  <i class="fa fa-sign-out"></i> <span>Sign Out</span>
                <% end -%>
              </div>
            </li>
          </ul>
        </li>

      </ul>
    </div>
  </nav>
</header>
<!-- right side menu for filter -->

<!-- sidebar menu -->
<aside class="main-sidebar">
  <section class="sidebar">
    <ul class="sidebar-menu">
      <% if current_user.is_admin || current_user.role=='release_manager' %>
      <li>
        <%= link_to users_path do %>
          <i class="fa fa-user"></i><span> Users </span>
        <% end %>
      </li>
       <%end%>
      <li>
        <%= link_to incident_reports_url do %>
          <i class="fa fa-exclamation-triangle"></i><span>Incident Reports</span>
        <% end %>
      </li>
      <li>
        <%= link_to change_requests_url do %>
          <i class="fa fa-pencil-square-o"></i> <span>Change Requests</span>
        <% end %>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
