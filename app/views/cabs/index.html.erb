<p id="notice"><%= notice %></p>
  <h1 class="page-header">CAB</h1>
  <div class="panel panel-default">
              <div class="panel-heading"></div>
              <div class="panel-body">
                <div class='row'>
                <div class = "col-lg-4 form-group" >
                <table class='table table-striped'>
                  <thead>
                    <tr>
                      <th>CAB Date</th>
                      <th colspan="3">Action</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @cabs.each do |cab| %>
                      <tr>
                        <td><%=raw cab.meet_date.to_s(:long) %></td>
                        <td><%= link_to 'Show', cab %></td>
                        <td><%= link_to 'Edit', edit_cab_path(cab) %></td>
                        <td><%= link_to 'Destroy', cab, method: :delete, data: { confirm: 'Are you sure?' } %></td>

                    </tr>
                    <% end %>
                  </tbody>
                </table>
                  <%= paginate @cabs, :theme => 'twitter-bootstrap-3' %>
                </div>
              </div>
<br>
<%= link_to 'Arrange CAB', new_cab_path %>
<br>

</div>
</div>
