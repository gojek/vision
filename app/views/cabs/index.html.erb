<section class="content-header">
  <h1>
    CAB
    <%= link_to  new_cab_path, class: 'btn btn-flat btn-primary pull-right'  do %>
      <i class="fa fa-plus"></i> <strong>Arrange CAB</strong>
    <%end %> 
  </h1>
</section><!--/content-header-->

<section class="content">
  <div class='row'>
    <div class='col-lg-6'>
      <%if flash[:destroy_cab_notice] != nil %>
         <div class="alert alert-success alert-dismissable ">
          <button type="button" class="close" data-dismiss="success" aria-hidden="true">Ã—</button>
          <h4>  <i class="icon fa fa-check"></i> Alert!</h4>
          <p id="notice"><%= flash[:destroy_cab_notice]  %></p>
        </div><!--/alert alert-danger-->
      <% end %>
    </div><!--/col-->
  </div><!--/row-->
  <div class="row">    
    <div class="col-lg-6 col-xs-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">CAB List</h3>
        </div><!-- /box-header -->
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <tr>
                <th>CAB Date</th>
                <th colspan="3">Action</th>
            </tr>
            <% @cabs.each do |cab| %> 
            <tr>
                <td><%=raw cab.meet_date.to_s(:long) %></td>
                <td><%= link_to 'Show', cab %></td>
                <% if current_user.is_admin || current_user.role == 'release_manager' %>
                <td><%= link_to 'Edit', edit_cab_path(cab) %></td>
                <td><%= link_to 'Destroy', cab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <%end %>
            </tr>
            <% end %>
          </table><!--/table table-hover-->
        </div><!-- /box-body -->
        <div class="box-footer clearfix">
            <%= paginate @cabs, :theme => 'twitter-bootstrap-3'%>
        </div><!--/box-footer-->
      </div><!-- /box -->
    </div><!--/col-->
    <div class='col-lg-6 col-xs-12'>
      <div class='box'>
        <div class='box box-body'>
          <div id='cab_calendar'>
          </div>
        </div><!--/box-body-->
      </div><!--/box-->
    </div><!--/col-->
  </div><!--/row-->
</section><!--/content-->

<!--full calendar script-->
<script>
$(document).on('ready page:load', function (){
   $("#cab_calendar").fullCalendar({
     defaultView: "month",
     events: "/cabs/get_cabs.json",
     dragOpacity: "0.5",
     eventClick: function(event) {
        if (event.url) {
            window.location.href(event.url);
            return false;
        }
    }
  });
});
</script>
<!--full calendar custom style-->
<style type="text/css">
.fc-content {
    font-size: 10pt;
    font-family: Source Sans Pro, Arial, Sans-Serif;
}
</style>