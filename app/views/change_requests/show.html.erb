              </tbody>
            </table>
          </div><!--/table-responsive-->

          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>position</th>
                </tr>
              </thead>
              <tbody>
                <% @change_request.testers.each do |tes| %>
                  <tr>
                    <td><%= tes.name %></td>
                    <td><%= tes.position %></td>
                  </tr>
