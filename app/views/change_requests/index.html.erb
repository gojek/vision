<p id="notice"><%= notice %></p>

<h1>Listing Change Requests</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Requestor desc</th>
      <th>Priority</th>
      <th>Category</th>
      <th>Type</th>
      <th>Change requirement</th>
      <th>Business justification</th>
      <th>Requestor position</th>
      <th>Note</th>
      <th>Request Date</th>
      <th>User</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @change_requests.each do |change_request| %>
      <tr>
        <td><%= change_request.requestor_desc %></td>
        <td><%= change_request.priority %></td>
        <td><%= change_request.category %></td>
        <td><%= change_request.cr_type %></td>
        <td><%= change_request.change_requirement %></td>
        <td><%= change_request.business_justification %></td>
        <td><%= change_request.requestor_position %></td>
        <td><%= change_request.note %></td>
        <td><%= change_request.created_at %></td>
        <td><%= change_request.user.name %></td>
        <td><%= link_to 'Show', change_request %></td>
        <td><%= link_to 'Edit', edit_change_request_path(change_request) %></td>
        <td><%= link_to 'Destroy', change_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

