# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*
!/log/.keep
/tmp
logfile

# Ignore application configuration
.DS_Store
/config/application.yml

*.swp
*.swo

coverage
/coverage/*.html
/coverage/*.json
/coverage/*

# Ignore bower components
/vendor

.ruby-version
lib/tasks/approval.rb
vision.dump

# config/database.yml
coverage/*
.byebug_history
.keep

# Ignore solr data
solr/*
!solr/configsets/
!solr/solr.xml
!solr/development
solr/development/*
!solr/development/core.properties
!solr/test
solr/test/*
